<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/preto_payshare"
    tools:context=".HubFragment">

    <TextView
        android:id="@+id/page_pagamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="20dp"
        android:text="Boa noite"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="25dp"
        android:text="@string/nome_user"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/page_pagamento" />

    <ImageView
        android:id="@+id/img_user_hub"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="320dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/page_pagamento"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profile_men" />

    <androidx.cardview.widget.CardView
        android:id="@+id/box_hub"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="30dp"
        app:cardBackgroundColor="@color/gray"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toTopOf="@id/name_user"
        >
            <ScrollView
                android:id="@+id/scroll_saldo"
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/scrow_view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_box_saldo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="35dp"
                android:text="Meu saldo"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/scroll_saldo" />

            <TextView
                android:id="@+id/txt_valor_saldo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="50dp"
                android:hint="R$ 0.00"
                android:textColorHint="@color/verde_payshare"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/txt_box_saldo" />

            <ImageView
                android:id="@+id/img_visualizar_saldo"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_marginStart="270dp"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_valor_saldo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/btn_show_money"
                tools:ignore="OnClick" />

            <ImageView
                android:id="@+id/img_add_dinheiro"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="80dp"
                app:layout_constraintTop_toBottomOf="@+id/scroll_saldo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/add_dinheiro" />

            <TextView
                android:id="@+id/txt_add_dinheiro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:layout_marginTop="125dp"
                android:text="Adicionar"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/img_add_dinheiro" />

            <ImageView
                android:id="@+id/img_transferir"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_marginStart="150dp"
                android:layout_marginTop="80dp"
                app:layout_constraintTop_toBottomOf="@+id/scroll_saldo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/transferir" />

            <TextView
                android:id="@+id/txt_transferir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="142dp"
                android:layout_marginTop="126dp"
                android:text="Transferir"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/img_transferir" />

            <ImageView
                android:id="@+id/img_extrato"
                android:layout_width="37dp"
                android:layout_height="36dp"
                android:layout_marginStart="250dp"
                android:layout_marginTop="91dp"
                app:layout_constraintTop_toBottomOf="@+id/scroll_saldo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/extrato" />

            <TextView
                android:id="@+id/txt_extrato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="248dp"
                android:layout_marginTop="127dp"
                android:text="Extrato"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_extrato" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/box_avisos"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="30dp"
        app:cardBackgroundColor="@color/dark"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@+id/box_hub">
        >
            <ImageView
                android:id="@+id/img_cell_hub"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/celular_hub" />

            <TextView
                android:id="@+id/card_avisos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="30dp"
                android:text="@string/carta_avisos"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:id="@+id/box_criar_lobby"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="15dp"
        android:visibility="invisible"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/scrow_view"
        app:layout_constraintTop_toBottomOf="@+id/box_avisos">
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp">

            <TextView
                android:id="@+id/lobby_vazia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="100dp"
                android:text="Você não possui lobby ativa"
                android:textColor="@color/verde_payshare"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_criar_lobby"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="90dp"
                android:layout_marginStart="90dp"
                android:layout_marginEnd="90dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_button_clear_green"
                android:text="criar lobby"
                android:textAllCaps="false"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lobby_vazia" />
            />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/entry_lobby"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="90dp"
                android:layout_marginStart="90dp"
                android:layout_marginEnd="90dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_button_clear_green"
                android:text="Participar de uma lobby"
                android:textAllCaps="false"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_criar_lobby" />
            />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/box_lobby_ativa"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/scrow_view"
        app:layout_constraintTop_toBottomOf="@+id/box_avisos">
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp">

            <ImageView
                android:id="@+id/img_lobby_ativa"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/green_team" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_entrar_lobby"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:background="@drawable/bg_button_clear_green"
                android:text="Entrar na lobby"
                android:textAllCaps="false"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_lobby_ativa" />
            />

            <TextView
                android:id="@+id/txt_nome_lobby"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sala de pagamento"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_entrar_lobby" />
            />

            <TextView
                android:id="@+id/txt_nome_ativo_lobby"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Pizza Dominos"
                android:textAlignment="center"
                android:textColor="#1CDC6E"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_nome_lobby" />
            />
            <TextView
                android:id="@+id/txt_share_friends"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Codigo da sala"
                android:textAlignment="center"
                android:textColor="#1CDC6E"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_nome_ativo_lobby" />
            />

        </androidx.constraintlayout.widget.ConstraintLayout>



    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>