<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/preto_payshare"
    tools:context=".CriarLobbyFragment">

    <TextView
        android:id="@+id/txt_adicioanar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="@string/criar_lobby"
        android:textColor="@color/white"
        android:textSize="@dimen/large_title" />

    <TextView
        android:id="@+id/txt_desc_criarLobby"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="Crie sua sala de pagamento com as opções abaixo."
        android:textColor="@color/white"
        android:textSize="15dp" />


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_nome_lobby"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="18dp"
        android:hint="Nome da Lobby"
        android:inputType="text"
        android:paddingStart="18dp"
        android:layout_marginTop="10dp"
        android:paddingEnd="18dp"
        android:textSize="15dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@id/edit_text_senha" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_descricao_pedido"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="18dp"
        android:layout_marginTop="10dp"
        android:hint="Descrição da Lobby"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:textSize="15dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@id/btn_entrar" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_text_valor_lobby"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="18dp"
        android:layout_marginTop="10dp"
        android:hint="Valor da Lobby"
        android:imeOptions="actionDone"
        android:inputType="numberDecimal"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:textSize="15dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@id/btn_entrar" />


        <Button
            android:id="@+id/btn_inserir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:background="@drawable/bg_button_normal"
            android:text="Criar" />


</LinearLayout>