<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/preto_payshare"
    tools:context=".CriarLobbyFragment">

    <TextView
        android:id="@+id/txt_adicioanar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="Criar Lobby"
        android:textColor="@color/white"
        android:textSize="@dimen/large_title" />



    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_nome_lobby"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="18dp"
        android:hint="Nome da lobby*"
        android:inputType="text"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        app:layout_constraintBottom_toTopOf="@id/edit_text_senha" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_descricao_pedido"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="18dp"
        android:layout_marginTop="10dp"
        android:hint="Descrição pedido*"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        app:layout_constraintBottom_toTopOf="@id/btn_entrar" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_text_valor_lobby"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="18dp"
        android:layout_marginTop="10dp"
        android:hint="Valor lobby"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        app:layout_constraintBottom_toTopOf="@id/btn_entrar" />


        <Button
            android:id="@+id/btn_inserir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_button_normal"
            android:text="Criar" />


</LinearLayout>