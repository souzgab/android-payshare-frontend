<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/preto_payshare"
    tools:context=".WalletFragment">

    <TextView
        android:id="@+id/page_pagamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="20dp"
        android:text="Pagamento"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/box_carteira"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="70dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/scrow_view"
        app:layout_constraintTop_toTopOf="@id/page_pagamento"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_carteira"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:layout_marginBottom="3372dp"
                android:text="@string/carteira"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <TextView
                android:id="@+id/saldo_carteira"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:layout_marginTop="15dp"
                android:text="Seu saldo de carteira"
                android:textColor="@android:color/darker_gray"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_carteira" />

            <TextView
                android:id="@+id/simbolo_moeda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:layout_marginTop="20dp"
                android:text="R$"
                android:textColor="@color/verde_payshare"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/saldo_carteira" />

            <TextView
                android:id="@+id/valor_carteira"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="20dp"
                android:text="@string/saldo_carteira"
                android:textColor="@color/verde_payshare"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/saldo_carteira"
                android:layout_toLeftOf="@id/simbolo_moeda"/>

            <ImageView
                android:id="@+id/img_visualizar_saldo"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/saldo_carteira"
                android:layout_toLeftOf="@id/simbolo_moeda"
                app:srcCompat="@drawable/btn_exibir" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_adicionar_dinheiro"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="60dp"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:layout_marginTop="45dp"
                android:background="@drawable/bg_button_clear_green"
                android:text="@string/adicionar_dinheiro"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/valor_carteira" />
            />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/scrow_view"
        app:layout_constraintTop_toBottomOf="@+id/box_carteira">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_pagamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="3372dp"
                android:text="@string/forma_pagamento"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <androidx.core.widget.NestedScrollView
                android:id="@+id/scroll_card"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/scrow_gray"
                app:layout_constraintEnd_toEndOf="@id/btn_adicionar_pagamento"
                app:layout_constraintTop_toBottomOf="@+id/txt_pagamento"/>

            <ImageView
                android:id="@+id/img_cartao"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginEnd="250dp"
                android:layout_marginTop="35dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_pagamento"
                app:srcCompat="@drawable/master_card" />

            <TextView
                android:id="@+id/numero_cartao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginTop="40dp"
                android:text="******6589"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_pagamento"
                />

            <TextView
                android:id="@+id/tipo_cartao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="250dp"
                android:layout_marginTop="40dp"
                android:text="Credito"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_pagamento"
                />



            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_adicionar_pagamento"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="60dp"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:layout_marginTop="45dp"
                android:background="@drawable/bg_button_clear_green"
                android:text="@string/adicionar_pagamento"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/scroll_card" />
            />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>