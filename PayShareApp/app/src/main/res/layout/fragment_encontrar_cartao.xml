<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/preto_payshare"
    tools:context=".EncontrarCartaoFragment"
    >


    <TextView
        android:id="@+id/txt_adicionar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity="center"
        android:text="Encontrar Cartão"
        android:textColor="@color/white"
        android:textSize="@dimen/large_title" />

    <TextView
        android:id="@+id/txt_describe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:layout_marginTop="20dp"
        android:text="Encontre um cartão já Cadastrado"
        android:textColor="@color/white"
        android:textSize="15dp" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        android:textSize="15dp"
        android:inputType="numberDecimal"
        android:textColor="@color/white"
        android:hint="Digite o número do cartão"
        android:textColorHint="@android:color/darker_gray"
        android:id="@+id/et_NmrCartaoE"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        android:inputType="numberDecimal"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:hint="Digite o CVV"
        android:textColorHint="@android:color/darker_gray"
        android:id="@+id/et_cvvE"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/box_pagamentoE"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:visibility="visible"
        android:layout_marginHorizontal="30dp"
        app:cardBackgroundColor="@color/dark"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@+id/et_NmrCartao">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/scroll_card_constraint"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:background="@color/dark">


            <TextView
                android:id="@+id/txt_pagamento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:layout_marginTop="20dp"
                android:text="Meu Cartão"
                android:textColor="@android:color/darker_gray"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/scroll_card_constraint" />


            <TextView
                android:id="@+id/numeroCartaoE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:layout_marginTop="15dp"
                android:text="****************"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_pagamento" />

            <TextView
                android:id="@+id/tipo_cartao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:layout_marginTop="8dp"
                android:text="Credito"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/numeroCartaoE"
                tools:layout_editor_absoluteX="54dp" />

            <TextView
                android:id="@+id/tv_expire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:layout_marginTop="8dp"
                android:text="03/21"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tipo_cartao"
                tools:layout_editor_absoluteX="54dp" />

            <ImageView
                android:id="@+id/img_cartao"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginStart="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_expire"
                app:layout_constraintTop_toBottomOf="@+id/tipo_cartao"
                app:srcCompat="@drawable/master_card" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_escolherCartao"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@drawable/bg_button_clear_green"
                android:text="Cadastrar Outro"
                android:layout_marginStart="90dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="90dp"
                android:layout_marginBottom="30dp"
                android:textAllCaps="false"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_cartao" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/btn_pesquisarE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:visibility="visible"
        android:layout_marginEnd="30dp"
        android:background="@drawable/bg_button_normal"
        android:text="Pesquisar"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btn_confirmar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:visibility="gone"
        android:layout_marginEnd="30dp"
        android:background="@drawable/bg_button_normal"
        android:text="Encontrei meu Cartão!"
        android:textColor="@color/white" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_button_clear_red"
        android:visibility="invisible"
        android:id="@+id/limparPesquisa"
        android:layout_marginTop="40dp"
        android:text="Limpar"
        android:textColor="@color/white" />

</LinearLayout>