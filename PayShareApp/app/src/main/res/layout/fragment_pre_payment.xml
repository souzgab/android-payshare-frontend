<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/preto_payshare"
    tools:context=".EscolherFormaPagamentoFragment"
    >


    <TextView
        android:id="@+id/txt_adicioanar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity="center"
        android:text="Pagamento"
        android:textColor="@color/white"
        android:textSize="@dimen/large_title" />

    <TextView
        android:id="@+id/txt_describe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="Seleciona a forma de pagamento"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:id="@+id/rd_typePagamentoPre"
        >
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cartão"
            android:layout_margin="5dp"
            android:id="@+id/cartao"
            android:textColor="@android:color/darker_gray"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wallet"
            android:id="@+id/wallet"
            android:layout_margin="5dp"
            android:textColor="@android:color/darker_gray"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MercadoPago"
            android:id="@+id/mercadoPago"
            android:layout_margin="5dp"
            android:textColor="@android:color/darker_gray"
            />
    </RadioGroup>

    <TextView
        android:id="@+id/et_nomeCartaoPre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:hint=""
        android:textSize="15dp"
        android:textColorHint="@android:color/darker_gray"
        android:ems="10"
        android:inputType="numberDecimal" />

    <androidx.cardview.widget.CardView
        android:id="@+id/box_pagamentoPre"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:visibility="visible"
        android:layout_marginHorizontal="30dp"
        app:cardBackgroundColor="@color/dark"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@+id/et_nomeCartaoPre">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/scroll_card_constraint"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:background="@color/dark">

            <TextView
                android:id="@+id/txt_pagamento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:layout_marginTop="20dp"
                android:text="Meu Cartão"
                android:textColor="@android:color/darker_gray"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/scroll_card_constraint" />


            <TextView
                android:id="@+id/numero_cartao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:layout_marginTop="15dp"
                android:text="****************"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_pagamento" />

            <TextView
                android:id="@+id/tipo_cartao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:layout_marginTop="8dp"
                android:text="Credito"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/numero_cartao"
                tools:layout_editor_absoluteX="54dp" />

            <TextView
                android:id="@+id/tv_expire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:layout_marginTop="8dp"
                android:text="03/21"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tipo_cartao"
                tools:layout_editor_absoluteX="54dp" />

            <ImageView
                android:id="@+id/img_cartao"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginStart="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_expire"
                app:layout_constraintTop_toBottomOf="@+id/tipo_cartao"
                app:srcCompat="@drawable/master_card" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_escolherCartao"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@drawable/bg_button_clear_green"
                android:text="Escolher Cartão"
                android:layout_marginStart="90dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="90dp"
                android:layout_marginBottom="30dp"
                android:textAllCaps="false"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_cartao" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/btn_pagarPre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:visibility="visible"
        android:layout_marginEnd="30dp"
        android:background="@drawable/bg_button_normal"
        android:text="Pagar"
        android:textColor="@color/white" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:visibility="gone"
        android:id="@+id/pgPre"
        />


</LinearLayout>